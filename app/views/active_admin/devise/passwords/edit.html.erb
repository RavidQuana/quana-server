<div id="login">
	<header class="auth-header">
  		<%= image_tag "logo.svg", class: 'logo' %> 
  		<h1><%= I18n.t('active_admin.devise.change_password.title') %></h1>
  	</header>

  	<section class="auth-main">
	  	<%= active_admin_form_for(resource, as: resource_name, url: password_path(resource_name), 
	  		html: { method: :put }) do |f|
			f.inputs do
		  		f.input :password, label: I18n.t('active_admin.devise.password.title')
		  		f.input :password_confirmation, label: I18n.t('active_admin.devise.password_confirmation.title')
		  		f.input :reset_password_token, as: :hidden, input_html: { value: resource.reset_password_token }
			end

			f.actions do
		  		f.action :submit, label: I18n.t('active_admin.devise.change_password.submit'), button_html: { 
		  			value: I18n.t('active_admin.devise.change_password.submit') }
			end
	  	end %>
	</section>
</div>