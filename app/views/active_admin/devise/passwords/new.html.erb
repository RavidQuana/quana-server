<div id="login">
	<header class="auth-header">
  		<%= image_tag "logo.png", class: 'logo' %> 

	  	<h1><%= I18n.t('active_admin.devise.reset_password.title') %></h1>
	  	<h2><%= I18n.t('active_admin.devise.reset_password.instructions').html_safe %></h2>
	</header>    

	<section class="auth-main">
	  	<%= active_admin_form_for(resource, as: resource_name, url: password_path(resource_name), 
	  		html: { method: :post }) do |f|
			f.inputs do
	  			f.input :email, label: I18n.t('active_admin.devise.email.title')
			end

			f.actions do
	  			f.action :submit, label: I18n.t('active_admin.devise.reset_password.submit'), button_html: { 
	  				value: I18n.t('active_admin.devise.reset_password.submit') }
			end
	  	end %>
	</section>

	<%= render "active_admin/devise/shared/footer" %> 
</div>