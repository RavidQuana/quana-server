<div id="login">
	<header class="auth-header">
  		<%= image_tag "logo.svg", class: 'logo' %> 
	  	<h1><%= I18n.t('active_admin.devise.renew_password.title') %></h1>
	</header>    

	<section class="auth-main">
	  	<%= semantic_form_for(resource, as: resource_name, url: [resource_name, :password_expired], 
	  		html: { method: :post }) do |f|
			f.inputs do
	  			f.input :current_password, as: :password, label: I18n.t('active_admin.devise.current_password.title')
	  			f.input :password, as: :password, label: I18n.t('active_admin.devise.password.title')
	  			f.input :password_confirmation, as: :password, label: I18n.t('active_admin.devise.password_confirmation.title')
			end

			f.actions do
	  			f.action :submit, label: I18n.t('active_admin.devise.renew_password.submit'), button_html: { 
	  				value: I18n.t('active_admin.devise.renew_password.submit') }
			end
	  	end %>
	</section>

	<%= render "active_admin/devise/shared/footer" %> 
</div>